<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vandh.example.todoapp.EditItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:width="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter task title" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker1"
        android:layout_below="@+id/titleText"
        android:layout_alignRight="@+id/titleText"
        android:layout_alignEnd="@+id/titleText"
        android:layout_marginTop="20dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker2"
        android:layout_below="@+id/titleText"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@id/numberPicker1"
        android:layout_marginTop="20dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker3"
        android:layout_below="@+id/titleText"
        android:layout_toStartOf="@id/numberPicker2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/noteText"
        android:gravity="left"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:width="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter notes"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/textView3"
        android:layout_below="@+id/numberPicker1"
        android:layout_alignRight="@+id/noteText"
        android:layout_alignEnd="@+id/noteText"
        android:layout_toRightOf="@+id/numberPicker2"
        android:layout_toEndOf="@+id/numberPicker2"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#677cff"
        android:onClick="onClick_Priority"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/textView2"
        android:layout_below="@+id/numberPicker2"
        android:layout_alignRight="@+id/numberPicker2"
        android:layout_alignEnd="@+id/numberPicker2"
        android:layout_toRightOf="@+id/numberPicker3"
        android:layout_toEndOf="@+id/numberPicker3"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center_vertical|center"
        android:background="#3c3cff"
        android:onClick="onClick_Priority" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textView1"
        android:layout_below="@+id/numberPicker3"
        android:layout_alignRight="@+id/numberPicker3"
        android:layout_alignEnd="@+id/numberPicker3"
        android:layout_alignLeft="@+id/numberPicker3"
        android:layout_alignStart="@+id/numberPicker3"
        android:layout_marginTop="20dp"
        android:height="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center_vertical|center"
        android:background="#ff3939"
        android:onClick="onClick_Priority" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/numberPicker3"
        android:layout_toLeftOf="@+id/numberPicker3"
        android:layout_toStartOf="@+id/numberPicker3"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
